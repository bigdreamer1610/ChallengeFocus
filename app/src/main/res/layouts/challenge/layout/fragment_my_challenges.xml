<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".challenge.MyChallengesFragment">
    <RelativeLayout
        android:id="@+id/layoutHolder"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/theme"
        android:layout_height="70dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Thử thách của bạn"
        android:textColor="@color/text_theme"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25dp"
        android:fontFamily="@font/quicksand_bold"
        />
    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabLayout"
        android:background="@color/theme"
        android:layout_below="@+id/layoutHolder"
        app:tabSelectedTextColor="@color/text_theme"
        app:tabTextColor="@color/less_opacity_text_theme"
        app:tabIndicatorColor="@color/indicator_color"
        />
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager"
        android:layout_below="@+id/tabLayout"
        />
</RelativeLayout>