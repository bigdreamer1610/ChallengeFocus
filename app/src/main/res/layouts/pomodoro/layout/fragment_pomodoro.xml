<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".pomodoro.PomodoroFragment">

    <RelativeLayout
        android:id="@+id/topHolder"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/quicksand_semibold"
            android:text="Tập trung bằng Pomodoro"
            android:textColor="@color/text_theme"
            android:textSize="24sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="14dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_pomo_mainscreen" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="#414B58"
        android:fontFamily="@font/quicksand_semibold"
        android:padding="5dp"
        android:text="Bắt đầu"
        android:textColor="#F8EBD7"
        android:textSize="14sp"
        app:cornerRadius="50dp"
        android:layout_above="@id/btnAbout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAbout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btnHistory"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#414B58"
        android:fontFamily="@font/quicksand_semibold"
        android:onClick="goToAbout"
        android:padding="5dp"
        android:text="Pomodoro là gì?"
        android:textColor="#F8EBD7"
        android:textSize="14sp"
        app:cornerRadius="50dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHistory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#414B58"
        android:fontFamily="@font/quicksand_semibold"
        android:padding="5dp"
        android:text="Lịch sử tập trung"
        android:textColor="#F8EBD7"
        android:textSize="14sp"
        app:cornerRadius="50dp" />
</RelativeLayout>