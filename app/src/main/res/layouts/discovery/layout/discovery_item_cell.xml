<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageViewDiscovery"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@color/theme"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_cloth"></ImageView>

    <TextView
        android:id="@+id/textViewChallengeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewDiscovery"
        android:fontFamily="@font/quicksand_medium"
        android:text="Một trang sách Không bao giờ quên ahihihihifhf"
        android:textAlignment="center"
        android:textSize="16dp" />

</RelativeLayout>