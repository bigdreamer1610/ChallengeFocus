<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/discoveryWrapper"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_discovery"
        >
        <ImageView
            android:id="@+id/imageViewDiscovery"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@color/theme"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_cloth"></ImageView>
    </RelativeLayout>
    <TextView
        android:id="@+id/textViewChallengeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/discoveryWrapper"
        android:fontFamily="@font/quicksand_medium"
        android:text="Một trang sách Không bao giờ quên ahihihihifhf"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

</RelativeLayout>